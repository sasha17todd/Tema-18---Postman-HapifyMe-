					"script": {
						"exec": [
							"const ts = Date.now();\r",
							"\r",
							"pm.environment.set(\"first_name\", \"Test\");\r",
							"pm.environment.set(\"last_name\", \"User\");\r",
							"pm.environment.set(\"email\", `test_auto_${ts}@mail.com`);\r",
