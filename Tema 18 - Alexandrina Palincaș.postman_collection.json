		{
			"name": "03 - Get profile",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Get Profile: status 200\", function () {\r",
							"  pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const json = pm.response.json();\r",
							"const expectedEmail = pm.environment.get(\"email\");\r",
							"\r",
							"const actualEmail = json.email || (json.user && json.user.email);\r",
							"\r",
							"pm.test(\"Profile email matches generated email\", function () {\r",
							"  pm.expect(actualEmail).to.eql(expectedEmail);\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
